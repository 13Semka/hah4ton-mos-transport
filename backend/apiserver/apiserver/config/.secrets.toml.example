# Шаблон файла с секретными настройками
# ВАЖНО: Скопируйте этот файл в .secrets.toml и заполните своими значениями
# НЕ ХРАНИТЕ .secrets.toml в системе контроля версий!

[default]
# Ключ API для 2GIS
two_gis_api_key = "your_api_key_here"

# База данных (если будет использоваться)
database_url = "postgresql://user:password@localhost:5432/dbname"


# Настройки для режима разработки
[development]
# Можно переопределить специфичные для разработки секреты
two_gis_api_key = "development_api_key_here"

# Настройки для тестов
[testing]
# Можно использовать тестовые ключи и учетные данные
two_gis_api_key = "testing_api_key_here"
database_url = "postgresql://test:test@localhost:5432/test_db"

# Настройки для продакшена
[production]
# В продакшене лучше использовать переменные окружения
# @format {env[DATABASE_URL]} - будет заменено значением переменной окружения
database_url = "@format {env[DATABASE_URL]}" 